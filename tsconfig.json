{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "strict": true,
    "target": "esnext",
    "declaration": true
  },
  "exclude": ["node_modules", "**/*.test.js", "dist"]
}
